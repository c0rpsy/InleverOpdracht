<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Crow.MVVM.Views.ThemePage"
             Title="ThemePage">
    <ContentPage.BindingContext>
        <vm:ThemeViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="10">
        <!-- Header or Title -->
        <Label Text="Choose Your Theme" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,10,0,20" />

        <!-- Grid for Themes -->
        <CollectionView ItemsSource="{Binding Themes}" SelectionMode="None">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10" HorizontalOptions="Center" VerticalOptions="Center">
                        <Image Source="{Binding IconPath}" HeightRequest="100" WidthRequest="100" HorizontalOptions="Center" />
                        <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center" />
                        <Button Text="Select"
                                FontSize="14"
                                Margin="0,10,0,0"
                                Command="{Binding BindingContext.NavigateToAssignmentCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                CommandParameter="{Binding .}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>