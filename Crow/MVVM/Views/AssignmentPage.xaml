<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Crow.MVVM.Views.AssignmentPage"
             Title="AssignmentPage">
    <ContentPage.Content>
        <VerticalStackLayout Padding="20">
            <Label Text="{Binding ThemeName}" FontSize="24" HorizontalOptions="Center" />

            <!-- List of Assignments -->
            <CollectionView ItemsSource="{Binding Assignments}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="10" BackgroundColor="White" CornerRadius="10">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontSize="18" />
                                <Button Text="Take Photo" Clicked="TakePhoto_Clicked" CommandParameter="{Binding Id}" />
                                <Image Source="{Binding PhotoPath}" HeightRequest="100" Aspect="AspectFill" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
