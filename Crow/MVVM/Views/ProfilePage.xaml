<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Crow.MVVM.Views.ProfilePage"
             Title="Profile">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="#74d680" Offset="0.0" />
            <GradientStop Color="#a1e0a1" Offset="0.25" />
            <GradientStop Color="#c9f2c9" Offset="0.5" />
            <GradientStop Color="#a1e0a1" Offset="0.75" />
            <GradientStop Color="#74d680" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Profile Picture Section -->
            <Frame HeightRequest="150" WidthRequest="150" CornerRadius="75" BackgroundColor="White" HorizontalOptions="Center">
                <Image Source="{Binding ProfileImagePath}" HeightRequest="150" WidthRequest="150" Aspect="AspectFill" />
            </Frame>
            <Button Text="Edit Profile Picture" Command="{Binding EditProfilePictureCommand}" HorizontalOptions="Center" />

            <!-- Username Section -->
            <Label Text="Username" FontSize="16" TextColor="Black" />
            <Entry Text="{Binding Username}" Placeholder="Enter username..." FontSize="20" TextColor="Black" />

            <!-- Bio Section -->
            <Label Text="Bio" FontSize="16" TextColor="Black" />
            <Editor Text="{Binding Bio}" Placeholder="Enter your bio..." HeightRequest="100" TextColor="Black" />

            <!-- Save Button -->
            <Button Text="Save Changes" Command="{Binding SaveProfileCommand}" BackgroundColor="#4CAF50" TextColor="White" HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
