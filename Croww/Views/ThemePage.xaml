<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Croww.Views.ThemePage"
             Title="Theme">
    <ContentPage.Background>
        <!-- This is the gradient I planned on in the wireframes. -->
        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="#74d680" Offset="0.0" />
            <GradientStop Color="#a1e0a1" Offset="0.25" />
            <GradientStop Color="#c9f2c9" Offset="0.5" />
            <GradientStop Color="#a1e0a1" Offset="0.75" />
            <GradientStop Color="#74d680" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid>
        <VerticalStackLayout Padding="20">
            <!-- Header for the page. -->
            <Label Text="Choose a theme"
               FontSize="24"
               HorizontalOptions="Center"
               TextColor="White"
               Margin="0,20" />

            <!-- Grid for the themes to spawn in on. The images will eventually all function like buttons since they are supposed be buttons. -->
            <Grid ColumnDefinitions="*,*"
                  RowDefinitions="Auto,Auto,Auto"
                  VerticalOptions="Center"
                  HorizontalOptions="Center"
                  Padding="10"
                  RowSpacing="20"
                  ColumnSpacing="20">
                <!-- Row 1 -->
                <Frame Grid.Row="0" Grid.Column="0" Padding="0" CornerRadius="15" BackgroundColor="White">
                    <VerticalStackLayout>
                        <ImageButton Source="pet_image.png" Aspect="AspectFill" HeightRequest="150" WidthRequest="150" CornerRadius="15" CommandParameter="Pets" Clicked="Theme_Clicked" />
                        <Label Text="Pets/Animals" FontSize="14" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>
                <Frame Grid.Row="0" Grid.Column="1" Padding="0" CornerRadius="15" BackgroundColor="White">
                    <VerticalStackLayout>
                        <ImageButton Source="nature_image.png" Aspect="AspectFill" HeightRequest="150" WidthRequest="150" CornerRadius="15" CommandParameter="Nature" Clicked="Theme_Clicked" />
                        <Label Text="Nature/Landscapes" FontSize="14" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Row 2 -->
                <Frame Grid.Row="1" Grid.Column="0" Padding="0" CornerRadius="15" BackgroundColor="White">
                    <VerticalStackLayout>
                        <ImageButton Source="flower_image.png" Aspect="AspectFill" HeightRequest="150" WidthRequest="150" CornerRadius="15" CommandParameter="Flower" Clicked="Theme_Clicked" />
                        <Label Text="Flowers" FontSize="14" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>
                <Frame Grid.Row="1" Grid.Column="1" Padding="0" CornerRadius="15" BackgroundColor="White">
                    <VerticalStackLayout>
                        <ImageButton Source="macro_image.png" Aspect="AspectFill" HeightRequest="150" WidthRequest="150" CornerRadius="15" CommandParameter="Macro" Clicked="Theme_Clicked"/>
                        <Label Text="Macro" FontSize="14" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Row 3 -->
                <Frame Grid.Row="2" Grid.Column="0" Padding="0" CornerRadius="15" BackgroundColor="White">
                    <VerticalStackLayout>
                        <ImageButton Source="people_image.png" Aspect="AspectFill" HeightRequest="150" WidthRequest="150" CornerRadius="15" CommandParameter="People" Clicked="Theme_Clicked"/>
                        <Label Text="People" FontSize="14" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>
                <Frame Grid.Row="2" Grid.Column="1" Padding="0" CornerRadius="15" BackgroundColor="White">
                    <VerticalStackLayout>
                        <ImageButton Source="travel_image.png" Aspect="AspectFill" HeightRequest="150" WidthRequest="150" CornerRadius="15" CommandParameter="Travel" Clicked="Theme_Clicked"/>
                        <Label Text="Travel" FontSize="14" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
